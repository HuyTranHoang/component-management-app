<?xml version="1.0" encoding="UTF-8"?>

<?import io.github.palexdev.materialfx.controls.MFXButton?>
<?import io.github.palexdev.materialfx.controls.MFXPasswordField?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<AnchorPane prefHeight="395.0" prefWidth="370.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vn.aptech.componentmanagementapp.controller.ChangePasswordController">
   <children>
      <VBox layoutX="28.0" layoutY="50.0" prefHeight="290.0" prefWidth="320.0" spacing="12.0">
         <children>
            <MFXPasswordField id="change-changePassword" fx:id="txt_currentPassword" animated="false" borderGap="0.0" floatMode="ABOVE" floatingText="Current Password (*)" prefHeight="48.0" prefWidth="380.0">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MFXPasswordField>
            <Label fx:id="lbl_error_currentPassword" prefHeight="7.0" prefWidth="320.0" text="Lỗi" textFill="#e57c23" visible="false">
               <graphic>
                  <FontIcon iconColor="#e57c23" iconLiteral="fas-times-circle" />
               </graphic>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Label>
            <MFXPasswordField id="change-changePassword" fx:id="txt_newPassword" animated="false" borderGap="0.0" floatMode="ABOVE" floatingText="New Password (*)" prefHeight="48.0" prefWidth="380.0">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MFXPasswordField>
            <Label fx:id="lbl_error_newPassword" prefHeight="3.0" prefWidth="320.0" text="Lỗi" textFill="#e57c23" visible="false">
               <graphic>
                  <FontIcon iconColor="#e57c23" iconLiteral="fas-times-circle" />
               </graphic>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Label>
            <MFXPasswordField id="change-changePassword" fx:id="txt_confirmPassword" animated="false" borderGap="0.0" floatMode="ABOVE" floatingText="Confirm Password (*)" prefHeight="48.0" prefWidth="380.0">
               <font>
                  <Font name="Segoe UI" size="14.0" />
               </font>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </MFXPasswordField>
            <Label fx:id="lbl_error_confirmPassword" prefHeight="15.0" prefWidth="380.0" text="Lỗi" textFill="#e57c23" visible="false">
               <graphic>
                  <FontIcon iconColor="#e57c23" iconLiteral="fas-times-circle" />
               </graphic>
               <VBox.margin>
                  <Insets bottom="25.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
      <Label fx:id="lbl_successMessage" layoutX="55.0" layoutY="300.0" prefHeight="25.0" prefWidth="260.0" text="Change password succesfully" textAlignment="CENTER" textFill="#70da6a" visible="false">
         <font>
            <Font name="Inter Bold" size="18.0" />
         </font>
         <graphic>
            <FontIcon iconColor="#70da6a" iconLiteral="fas-check-circle" />
         </graphic>
      </Label>
      <MFXButton id="button-custom" layoutX="30.0" layoutY="344.0" onAction="#changePasswordButtonClick" prefHeight="33.0" prefWidth="311.0" text="Change Password">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </MFXButton>
   </children>
</AnchorPane>
